{
  "$schema": "https://json.schemastore.org/vercel",
  "version": 2,
  "name": "income-expenses-tracker",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "@react_app_api_url"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "@react_app_api_url"
    }
  }
}
